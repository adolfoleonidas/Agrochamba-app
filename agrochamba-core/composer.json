{
    "name": "agrochamba/core",
    "description": "AgroChamba Core Plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "AgroChamba Team",
            "email": "dev@agrochamba.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.6",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
    "psr-4": {
      "AgroChamba\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml.dist",
    "lint": "phpcs"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
